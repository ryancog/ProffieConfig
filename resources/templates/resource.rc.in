
#define wxUSE_DPI_AWARE_MANIFEST 2
#include <wx/msw/wx.rc>

ApplicationIcon ICON "${CMAKE_SOURCE_DIR}/resources/icons/icon.ico"
$<TARGET_PROPERTY:${TARGET},TRANSLATIONS>

1 VERSIONINFO
FILEVERSION $<TARGET_PROPERTY:${TARGET},BIN_VERSION_MAJOR>,$<TARGET_PROPERTY:${TARGET},BIN_VERSION_MINOR>,$<TARGET_PROPERTY:${TARGET},BIN_VERSION_BUGFIX>,0
FILEOS VOS_NT
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904E4" // US English, UTF-8.
        BEGIN
            VALUE "ProductName", "ProffieConfig"
            VALUE "CompanyName", "Kafrene Trading"
            VALUE "FileVersion", "$<TARGET_PROPERTY:${TARGET},BIN_VERSION>"
            VALUE "FileDescription", "$<GENEX_EVAL:$<TARGET_PROPERTY:${TARGET},DESCRIPTION>>"
            VALUE "InternalName", "$<TARGET_FILE_BASE_NAME:${TARGET}>"
            VALUE "LegalCopyright", "(C) 2023-2026 Ryan Ogurek"
            VALUE "OriginalFilename", "$<TARGET_FILE_NAME:${TARGET}>"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 1252 // US English, UTF-8
    END
END
